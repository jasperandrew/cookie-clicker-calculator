doctype html
html(lang="en")
	head
		meta(charset="UTF-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		meta(http-equiv="X-UA-Compatible", content="ie=edge")
		link(rel="stylesheet", href="css/normalize.css")
		link(rel="stylesheet", href="css/style.css")
		title Cookie Cruncher

	body
		h1(id="title") Cookie Cruncher

		div(id="shade",class="hidden",onclick="IO.toggleMenu()")

		nav(id="menu")
			div(class="button",onclick="IO.toggleMenu()")
				div
			
			div(id="controls")
				label(id="sellmode")
					input(type="checkbox",name="sellmode",onclick="runAll()")
					span
				input(type="number",name="quantity",min=0,max=9999,step=1,value=0,autocomplete="off",oninput="runAll()")
			
			div(id="discounts")
				div(id="upgrades")
					h2 Upgrades
					each upgrade in [['Season savings','season-savings'],['Santa\'s dominion','santas-dominion'],['Faberge egg','faberge-egg'],['Divine discount','divine-discount'],['Starter kit','starter-kit'],['Starter kitchen','starter-kitchen']]
						label
							input(type="checkbox",name=upgrade[1],value=upgrade[0],onclick="runAll()")
							span
								img(alt=upgrade[0],src="img/discounts/"+upgrade[1]+".png")
								!= upgrade[0]

				div(id="fortunes")
					h2 Fortunes
					each num in ['001','002','003','004','005','006','007','008','009','010','011','012','013','014','015','016','017','100']
						label
							input(type="checkbox",name='fortune-'+num,value='fortune-'+num,onclick="runAll()")
							span
								img(alt='Fortune #'+num,src="img/discounts/fortune-"+num+".png")
								!= "#"+num

				div(id="buffs")
					h2 Buffs
					each buff in [['Everything must go','everything-must-go'],['Summon Crafty Pixies','summon-crafty-pixies']]
						label
							input(type="checkbox",name=buff[1],value=buff[1],onclick="runAll()")
							span
								img(alt=buff[0],src="img/discounts/"+buff[1]+".png")
								!= buff[0]
				
				div(id="auras")
					h2 Auras
					each aura in [['Earth shatterer','earth-shatterer'],['Fierce hoarder','fierce-hoarder'],['Reality bending','reality-bending']]
						label
							input(type="checkbox",name=aura[1],value=aura[1],onclick="runAll()")
							span
								img(alt=aura[0],src="img/discounts/"+aura[1]+".png")
								!= aura[0]
				
				div(id="spirits")
					h2 Spirits
					each spirit in [['Dotjeiess','dotjeiess']]
						label
							input(type="checkbox",name=spirit[1],value=spirit[1],onclick="runAll()")
							span
								img(alt=spirit[0],src="img/discounts/"+spirit[1]+".png")
								!= spirit[0]
								input(type="radio",name=spirit[1]+"-slot",value="diamond",onclick="runAll()")
								input(type="radio",name=spirit[1]+"-slot",value="ruby",onclick="runAll()")
								input(type="radio",name=spirit[1]+"-slot",value="jade",onclick="runAll()")
				
				div(id="plants")
					h2 Plants
					div(id="garden")
					- for (let i = 0; i < 36; i++)
						div(class="plot")

			div(id="settings")
				h2 Settings
				label
					input(type="checkbox",name="short-numbers",onclick="runAll()",checked=true)
					span="Short numbers"
				label
					input(type="button",name="import-save-data",onclick="importSave()")
					span="Import save data"
			
			footer
				| Created by Jasper. Check it out on 
				a(href="http://github.com/jasperandrew/cookie-cruncher/") Github
				| !

		main(id="buildings")
			each bldg in ['cursor','grandma','farm','mine','factory','bank','temple','wizard-tower','shipment','alchemy-lab','portal','time-machine','antimatter-condenser','prism','chancemaker','fractal-engine','javascript-console']
				div
					img(alt=bldg,src="img/buildings/"+bldg+".png")
					input(type="number",name=bldg,min=0,max=9999,step=1,value=0,autocomplete="off",oninput="run('"+bldg+"')")
					span(class="output",id=bldg) 0

		script(src="js/base64.js")
		script(src="js/load.js")
		script(src="js/main.js")